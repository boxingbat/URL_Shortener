<form action="/shortened_url" method="POST" id="url" class="input-group d-flex justify-content-center my-3">
  <input type="text" placeholder="Input URL here" name="url" class="form-control col-lg-3 col-md-5 col-sm-7" style="max-width: 400px;">
</form>

<div class="d-flex justify-content-center">
  <button type="submit" form="url" class="btn btn-primary">Shorten</button>
</div>

{{#if isEmpty}} 
  <div class="alert alert-danger my-3" role="alert">
    請輸入網址
  </div>
{{/if}}